<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context="ca.bcit.hometown.hometownodyssey.Store">

    <fragment android:name="ca.bcit.hometown.hometownodyssey.AdventureFragment"
        android:id="@+id/adventure_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        tools:layout="@layout/fragment_adventure" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold: 0"
        android:layout_below="@+id/adventure_fragment"
        android:id="@+id/store_gold"
        />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/store_gold"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ca.bcit.hometown.hometownodyssey.HorizontalListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:id="@+id/headListView"
                android:background="@color/gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/shop_list_padding"
                android:paddingBottom="@dimen/shop_list_padding"
                android:paddingRight="@dimen/shop_list_padding"
                android:paddingLeft="@dimen/shop_list_padding"
                android:layout_marginBottom="5dp"
                />

            <ca.bcit.hometown.hometownodyssey.HorizontalListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:id="@+id/bodyListView"
                android:background="@color/gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/shop_list_padding"
                android:paddingBottom="@dimen/shop_list_padding"
                android:paddingRight="@dimen/shop_list_padding"
                android:paddingLeft="@dimen/shop_list_padding"
                android:layout_marginBottom="5dp"
                />

            <ca.bcit.hometown.hometownodyssey.HorizontalListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:id="@+id/legListView"
                android:background="@color/gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/shop_list_padding"
                android:paddingBottom="@dimen/shop_list_padding"
                android:paddingRight="@dimen/shop_list_padding"
                android:paddingLeft="@dimen/shop_list_padding"
                android:layout_marginBottom="5dp"
                />

            <ca.bcit.hometown.hometownodyssey.HorizontalListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:id="@+id/footListView"
                android:background="@color/gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/shop_list_padding"
                android:paddingBottom="@dimen/shop_list_padding"
                android:paddingRight="@dimen/shop_list_padding"
                android:paddingLeft="@dimen/shop_list_padding"
                />
        </LinearLayout>

</RelativeLayout>